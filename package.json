{
  "name": "generic-sensors-adapter",
  "version": "0.0.2",
  "description": "Generic Sensors for Mozilla IoT Gateway",
  "author": "Philippe Coval",
  "main": "index.js",
  "keywords": [
    "mozilla",
    "iot",
    "adapter",
    "i2c",
    "sensors"
  ],
  "license": "MPL-2.0",
  "homepage": "https://github.com/rzr/mozilla-iot-generic-sensors-adapter",
  "repository": {
    "type": "git",
    "url": "https://github.com/rzr/mozilla-iot-generic-sensors-adapter.git"
  },
  "bugs": {
    "url": "https://github.com/rzr/mozilla-iot-generic-sensors-adapter/issues"
  },
  "files": [
    "LICENSE",
    "SHA256SUMS",
    "generic-sensors-adapter.js",
    "index.js",
    "node_modules"
  ],
  "dependencies": {
    "generic-sensors-lite": "0.0.1"
  },
  "bundledDependencies": [
    "generic-sensors-lite"
  ],
  "moziot": {
    "api": {
      "min": 2,
      "max": 2
    },
    "plugin": true,
    "exec": "{nodeLoader} {path}",
    "config": {
      "generic-sensors": [
      ]
    },
    "schema": {
      "type": "object",
      "properties": {
        "generic-sensors": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "type",
              "sensorType",
              "name",
              "properties"
            ],
            "properties": {
              "type": {
                "type": "string"
              },
              "sensorType": {
                "type": "string"
              },
              "name": {
                "type": "string"
              },
              "properties": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": [
                    "name",
                    "metadata"
                  ],
                  "properties": {
                    "name": {
                      "type": "string"
                    },
                    "metadata": {
                      "type": "object",
                      "required": [
                        "type"
                      ],
                      "properties": {
                        "type": {
                          "type": "string"
                        },
                        "unit": {
                          "type": "string"
                        },
                        "description": {
                          "type": "string"
                        },
                        "minimum": {
                          "type": "integer"
                        },
                        "maximum": {
                          "type": "integer"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
